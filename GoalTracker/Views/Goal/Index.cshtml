@model IEnumerable<Model.GoalListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GoalId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GoalCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GoalName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GoalType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfYears)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GoalId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoalName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoalType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfYears)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.GoalId }) |
                @Html.ActionLink("Details", "Details", new { id = item.GoalId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.GoalId })
            </td>
        </tr>
    }

</table>
